pipeline {
    agent any
     parameters {
        booleanParam(name: "RELEASE", defaultValue: false)
	string(defaultValue: 'stage', name: 'environment')
    }
    stages {
     
        stage("Checkout") {
            steps {
                git branch: 'master', url: 'https://github.com/anuragsinghai2010/JenkinsFile.git'
                echo "Checkout is completed"
		sleep 5
            }
        }
	
	
	
	stage("Run shell script") {
            steps {
	    script {
                    if (params.environment == 'Prod') {
	   
	    	sh "chmod 777 ${env.WORKSPACE}/test.sh"
                sh './test.sh'
                echo "Shell script has run is completed"
		
            }}}
        }
	
	stage("Run JMeter Test") {
        steps {
            
                sh '/Users/anuragjain/Downloads/apache-jmeter-5.4.1/bin/jmeter.sh -n -t Calculate_location.jmx -l result.jtl'
		echo "Test is completed" 
            
        }
    }
    stage('Validate Fail fast') {
             failFast true
             parallel {
                  stage('stage A') {
                    steps {
                        echo 'stage A started'
                        sleep 5
                        sh 'false'
                        echo 'stage A Ended' //will not execute because of above sh return

                    }
                }
                stage('stage B') {
                    steps {
                        echo 'stage B started'
                        sleep 10
                        echo 'stage B Ended' //will not execute because of above stage fail
                    }
                }
                 stage('stage C') {
                    steps {
                        echo 'stage C started'
                        echo 'stage C Ended' //May complete before Stage A fails
                    }
                }
             }
         }
}
}
